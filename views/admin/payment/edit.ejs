<!DOCTYPE html>
<html lang="en">
  <%- include ("../../partials/header.ejs") %>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <%- include ("../../partials/navbar.ejs")%> <%- include
      ("../../partials/sidebar.ejs") %>
      <!-- Content Wrapper. Contains page content -->

      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Jenis Pembayaran</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/payment">Jenis Pembayaran</a>
                  </li>
                  <li class="breadcrumb-item active">Ubah</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form Ubah Jenis Pembayaran</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form
                    action="/payment/edit/<%= payment._id %>?_method=PUT"
                    method="POST"
                  >
                    <div class="card-body">
                      <div class="form-group">
                        <label for="type">Tipe</label>
                        <input
                          type="text"
                          class="form-control"
                          name="type"
                          id="type"
                          placeholder="Masukkan Type"
                          value="<%= payment.type %>"
                        />
                      </div>
                      <div class="form-group">
                        <label>Bank</label>
                        <div class="select2-purple">
                          <select
                            class="form-control select2"
                            style="width: 100%"
                            name="banks"
                            data-placeholder="Pilih Bank"
                            multiple="multiple"
                            required
                          >
                            <% banks.forEach(bank => { %>
                            <option value="<%= bank._id %>"
                              <% payment.banks.forEach(paymentBank => { %>
                                <% if(paymentBank._id.toString() === bank._id.toString() ) { %>
                                  selected
                                <% } %>
                              <% }); %>>
                              <%= bank.nameBank %> - <%= bank.name %> <%=
                              bank.noRekening %>
                            </option>
                            <% }); %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Ubah
                      </button>
                    </div>
                  </form>
                </div>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
      <%- include ("../../partials/footer.ejs") %>
    </div>
    <!-- ../../wrapper -->
    <%- include ("../../partials/js.ejs") %>
  </body>
</html>
